<h2>Sign up</h2>

<%= form_with model: @user, url: user_registration_path, id: 'new_user', class: 'new_user', local: true do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
  
  <div class="field">
    <%= f.label :sex %><br />
    <%= f.radio_button :sex, "男性" %>男性 <%= f.radio_button :sex, "女性" %>女性
  </div>
  
  <div class="field">
    <%= f.label :birthdate %><br />
    <%= f.date_select :birthdate %>
  </div>
  
  <div class="field">
    <%= f.label :height %><br />
    <%= f.number_field :height %>
  </div>
  
  <div class="field">
    <%= f.label :target_weight %><br />
    <%= f.number_field :target_weight %>
  </div>
  
  <div class="field">
    <%= f.check_box :diet_style1 ,{}, "true", "false" %>
    <%= f.label :diet_style1, "筋トレメイン" %>
  </div>
  
  <div class="field">
    <%= f.check_box :diet_style2 ,{}, "true", "false" %>
    <%= f.label :diet_style2, "食事制限メイン" %>
  </div>
  
  <div class="field">
    <%= f.check_box :diet_style3 ,{}, "true", "false" %>
    <%= f.label :diet_style3, "長期継続" %>
  </div>
  
  <div class="field">
    <%= f.check_box :diet_style4 ,{}, "true", "false" %>
    <%= f.label :diet_style4, "短期集中" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
