%table.table
  %tr= attachment_image_tag(user, :profile_image, size: "20x20", fallback: "l_e_others_500.jpg")
  %tr
    %th name
    %th= user.name

  %tr
    %th フォロー中
    %th
      = link_to followings_user_path(user) do
        %span.followings_count
          = user.followings.count
  %tr
    %th フォロワー
    %th
      = link_to followers_user_path(user) do
        %span.followers_count
          = user.followers.count
- if current_user == user
  = link_to '',edit_user_path(user),class: "btn btn-outline-secondary btn-block fas fa-user-cog edit_user_#{user.id}"
- else
  = link_to "チャット", chat_path(user.id)
  %div{:id => "follow_bottons_#{user.id}"}
    = render "relationships/follow_form", user: user
